package com.web_app.Service;

import com.web_app.Model.Product;
import com.web_app.Repository.ProductRepo;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;
@Service
public class ProductService {

    @Autowired
    ProductRepo repo;

//    List<Product> products=new ArrayList<>( Arrays.asList(new Product(101,"Iphone ",50000),
//            new Product(102,"Cannon",60000)));
//

    public List<Product> getProducts() {
        return repo.findAll();
    }


    public Product getProductByid(int id) {
        return repo.findById(id).orElse(new Product(0,"no product",0000));
    }


    public void addData(Product prod){
        repo.save(prod);
    }


    public void updateProduct(Product product) {
     repo.save(product);
    }


    public void deleteProduct(int id) {
       repo.deleteById(id);
    }

}
